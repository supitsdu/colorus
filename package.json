{
  "name": "colorus",
  "version": "0.7.1",
  "description": "Sleek and powerful color manipulation library for JavaScript.",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "require": {
        "default": "./dist/main.cjs",
        "types": "./@types/main.d.ts"
      },
      "import": {
        "default": "./dist/main.js",
        "types": "./@types/main.d.ts"
      }
    }
  },
  "scripts": {
    "format": "prettier --write src/**/*.js",
    "lint": "eslint src/**/*.js",
    "test": "jest",
    "build": "rollup -c"
  },
  "author": "Eduardo M. Santos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/supitsdu/colorus.git"
  },
  "bugs": {
    "url": "https://github.com/supitsdu/colorus/issues"
  },
  "homepage": "https://github.com/supitsdu/colorus/",
  "keywords": [
    "color",
    "colours",
    "hex",
    "rgb",
    "hsl",
    "convert",
    "adjust"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-swc": "^0.3.0",
    "@swc/core": "^1.4.0",
    "@swc/jest": "^0.2.36",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rollup": "^4.9.6"
  }
}
